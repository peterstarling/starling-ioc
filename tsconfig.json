{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es2015", "es2016", "esnext.asynciterable"],
      "allowJs": false,
      "checkJs": false,
      "pretty": true,
      "strict": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "plugins": [{ "name": "tslint-language-service" }],
      "outDir": "./dist",
      "declaration": true,
      "rootDir": "./src",
    },
    "exclude": [
      "test/",
      "dist"
    ]
  }
  